<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.walmart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.Walmart">
        <activity android:name=".ui.screens.PastOrdersActivity"></activity>
        <activity android:name=".ui.screens.CartActivity" />
        <activity android:name=".ui.screens.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.screens.ItemDetailActivity" />
        <activity android:name=".ui.screens.CategoryListActivity" />
    </application>

</manifest>